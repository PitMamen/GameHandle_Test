<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/l1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/select_l1"/>

            <com.daimajia.numberprogressbar.NumberProgressBar
                android:id="@+id/l2_p"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                app:max="255"
                app:progress_reached_bar_height="2dp"
                app:progress_reached_color="#CF0E0F"
                app:progress_text_color="#CF0E0F"
                app:progress_unreached_bar_height="2dp"
                app:progress_unreached_color="#0F0101"/>

            <ImageView
                android:id="@+id/r1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/select_r1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/l2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/select_l2"/>

            <com.daimajia.numberprogressbar.NumberProgressBar
                android:id="@+id/r2_p"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                app:max="255"
                app:progress_reached_bar_height="2dp"
                app:progress_reached_color="#CF0E0F"
                app:progress_text_color="#CF0E0F"
                app:progress_unreached_bar_height="2dp"
                app:progress_unreached_color="#0F0101"/>

            <ImageView
                android:id="@+id/r2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/select_r2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginTop="35dp">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/up"
                    android:layout_width="@dimen/button_size"
                    android:layout_height="@dimen/button_size"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/select_up"/>

                <ImageView
                    android:id="@+id/left"
                    android:layout_width="@dimen/button_size"
                    android:layout_height="@dimen/button_size"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/select_left"/>

                <ImageView
                    android:id="@+id/right"
                    android:layout_width="@dimen/button_size"
                    android:layout_height="@dimen/button_size"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/select_right"/>

                <ImageView
                    android:id="@+id/down"
                    android:layout_width="@dimen/button_size"
                    android:layout_height="@dimen/button_size"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/select_down"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/y"
                    android:layout_width="@dimen/button_size"
                    android:layout_height="@dimen/button_size"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/select_y"/>

                <ImageView
                    android:id="@+id/x"
                    android:layout_width="@dimen/button_size"
                    android:layout_height="@dimen/button_size"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/select_x"/>

                <ImageView
                    android:id="@+id/b"
                    android:layout_width="@dimen/button_size"
                    android:layout_height="@dimen/button_size"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/select_b"/>

                <ImageView
                    android:id="@+id/a"
                    android:layout_width="@dimen/button_size"
                    android:layout_height="@dimen/button_size"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/select_a"/>

            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp">

            <com.mygt.handshank.sample.RockerView
                android:id="@+id/l_r"
                android:layout_width="@dimen/rocker_size"
                android:layout_height="@dimen/rocker_size"
                app:areaBackground="@mipmap/area_bg"
                app:rockerBackground="@mipmap/r_rocker_n"
                app:rockerRadius="30dp"
                app:selectRockerBackground="@mipmap/r_rocker_p"/>

            <com.mygt.handshank.sample.RockerView
                android:id="@+id/r_r"
                android:layout_width="@dimen/rocker_size"
                android:layout_height="@dimen/rocker_size"
                android:layout_alignParentRight="true"
                app:areaBackground="@mipmap/area_bg"
                app:rockerBackground="@mipmap/r_rocker_n"
                app:rockerRadius="30dp"
                app:selectRockerBackground="@mipmap/r_rocker_p"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <ImageView
                android:id="@+id/test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_vertical"
                android:src="@drawable/select_normal"/>

            <ImageView
                android:id="@+id/change_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                android:src="@drawable/select_game"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/select_back"/>

            <ImageView
                android:id="@+id/start"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/select_start"/>

            <ImageView
                android:id="@+id/i"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/select_i"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:background="#0F0101"
        android:orientation="horizontal"
        android:padding="10dp">
        <LinearLayout android:layout_width="0dp" 
                      android:layout_height="wrap_content"
                      android:layout_weight="3"
                      android:orientation="vertical"
        >
        <TextView
            android:id="@+id/info_key1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="#FFFFFF"/>
         <TextView
                android:id="@+id/info_key2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textColor="#FFFFFF"/>
        <LinearLayout android:id="@+id/normal_info_x"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/info_x1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:textColor="#FFFFFF"/>
            <TextView
                android:id="@+id/info_x2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:textColor="#FFFFFF"/>
        </LinearLayout>
        <LinearLayout android:id="@+id/normal_info_y"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/info_y1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:textColor="#FFFFFF"/>
            <TextView
                android:id="@+id/info_y2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:textColor="#FFFFFF"/>
        </LinearLayout>
        </LinearLayout>
        <LinearLayout android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight="1"
                      android:orientation="vertical"
                >
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:id="@+id/info_key_interval"
                      android:text="最小间隔时间:ms"
                      android:background="@color/colorWHITE"
            />
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:id="@+id/info_key_count"
                      android:text="1s总个数0个"
                      android:background="@color/colorWHITE"
            />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>



